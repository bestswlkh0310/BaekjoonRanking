<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/on_board_graph"
    app:startDestination="@id/startFragment">

    <fragment
        android:id="@+id/startFragment"
        android:name="com.bestswlkh0310.presentation.feature.onboard.start.StartFragment"
        android:label="StartFragment"
        tools:layout="@layout/fragment_start">
        <action
            android:id="@+id/action_startFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/startFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
        <action
            android:id="@+id/action_startFragment_to_signupFragment"
            app:destination="@id/signupAFragment"
            app:popUpTo="@id/startFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.bestswlkh0310.presentation.feature.onboard.login.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login"/>
    <fragment
        android:id="@+id/signupAFragment"
        android:name="com.bestswlkh0310.presentation.feature.onboard.signup.SignupAFragment"
        android:label="fragment_signup"
        tools:layout="@layout/fragment_signup_a" >
        <action
            android:id="@+id/action_signupAFragment_to_signupBFragment"
            app:destination="@id/signupBFragment"
            app:popUpTo="@id/signupAFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
    </fragment>
    <fragment
        android:id="@+id/signupBFragment"
        android:name="com.bestswlkh0310.presentation.feature.onboard.signup.SignupBFragment"
        android:label="SignupBFragment"
        tools:layout="@layout/fragment_signup_b">
        <argument
            android:name="bjId"
            app:argType="string" />
        <argument
            android:name="nickName"
            app:argType="string" />
        <argument
            android:name="pw"
            app:argType="string" />
        <action
            android:id="@+id/action_signupBFragment_to_startFragment"
            app:destination="@id/startFragment"/>
    </fragment>
</navigation>