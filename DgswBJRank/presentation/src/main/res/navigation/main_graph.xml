<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.bestswlkh0310.presentation.feature.main.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_findGroupFragment"
            app:destination="@id/findGroupFragment" />
        <action
            android:id="@+id/action_homeFragment_to_createGroupFragment"
            app:destination="@id/createGroupFragment" />
    </fragment>
    <fragment
        android:id="@+id/rankFragment"
        android:name="com.bestswlkh0310.presentation.feature.main.rank.RankFragment"
        android:label="RankFragment"
        tools:layout="@layout/fragment_rank"/>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.bestswlkh0310.presentation.feature.main.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_editProfileFragment"
            app:destination="@id/editProfileFragment" />
        <action
            android:id="@+id/action_profileFragment_to_settingFragment"
            app:destination="@id/settingFragment" />
    </fragment>
    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.bestswlkh0310.presentation.feature.main.edit_profile.EditProfileFragment"
        android:label="fragment_edit_profile"
        tools:layout="@layout/fragment_edit_profile" />
    <fragment
        android:id="@+id/settingFragment"
        android:name="com.bestswlkh0310.presentation.feature.main.setting.SettingFragment"
        android:label="SettingFragment"
        tools:layout="@layout/fragment_setting"/>
    <fragment
        android:id="@+id/findGroupFragment"
        android:name="com.bestswlkh0310.presentation.feature.main.find_group.FindGroupFragment"
        android:label="fragment_find_group"
        tools:layout="@layout/fragment_find_group" />
    <fragment
        android:id="@+id/createGroupFragment"
        android:name="com.bestswlkh0310.presentation.feature.main.create_group.CreateGroupFragment"
        android:label="CreateGroupFragment"
        tools:layout="@layout/fragment_create_group"/>
</navigation>