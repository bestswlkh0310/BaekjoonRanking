<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.feature.onboard.signup.SignupBFragment">
    <data>
        <import type="android.view.View" />

        <variable
            name="vm"
            type="com.bestswlkh0310.presentation.feature.onboard.signup.SignupBViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/title"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/blackTitle"
            android:text="여기서부터는 선택이에요"
            />
        <EditText
            android:id="@+id/et_intro"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintStart_toStartOf="@id/title"
            app:layout_constraintEnd_toEndOf="@id/title"
            android:layout_marginTop="50dp"
            android:paddingStart="18dp"
            android:text="@={vm.intro}"
            android:textAllCaps="false"
            android:gravity="left|center_vertical"
            android:hint="간단한 자기 소개를 입력해주세요"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/button4"/>
        <EditText
            android:id="@+id/et_goal"
            app:layout_constraintTop_toBottomOf="@id/et_intro"
            app:layout_constraintStart_toStartOf="@id/et_intro"
            app:layout_constraintEnd_toEndOf="@id/et_intro"
            android:layout_marginTop="16dp"
            android:paddingStart="18dp"
            android:text="@={vm.goal}"
            android:textAllCaps="false"
            android:gravity="left|center_vertical"
            android:hint="목표를 입력해주세요"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/button4"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_next"
            android:text="회원가입"
            style="@style/button1"
            android:onClick="@{() -> vm.onClickSignup()}"
            android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>