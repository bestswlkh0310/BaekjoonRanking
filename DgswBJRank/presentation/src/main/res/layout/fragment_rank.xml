<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.feature.main.rank.RankFragment">
    <data>
        <variable
            name="vm"
            type="com.bestswlkh0310.presentation.feature.main.rank.RankViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main50">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="21dp"
            android:text="Solve 랭킹"
            style="@style/whiteTitle"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rank"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="300dp"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/main_background"
            android:elevation="14dp">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/today"
                android:layout_width="70dp"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/btn_today"
                android:text="오늘"
                style="@style/blackText"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/week"
                android:layout_width="70dp"
                android:layout_height="48dp"
                app:layout_constraintTop_toTopOf="@id/today"
                app:layout_constraintBottom_toBottomOf="@id/today"
                app:layout_constraintStart_toEndOf="@id/today"
                android:background="@drawable/btn_week"
                android:text="주간"
                style="@style/blackText"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_rank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"
                app:layout_constraintTop_toBottomOf="@id/today"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>