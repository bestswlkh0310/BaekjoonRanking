<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.feature.onboard.signup.SignupAFragment">
    <data>
        <import type="android.view.View" />

        <variable
            name="vm"
            type="com.bestswlkh0310.presentation.feature.onboard.signup.SignupAViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/title"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/title"
            android:text="당신은 누구세요"
            />
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_nickName"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintStart_toStartOf="@id/title"
            app:layout_constraintEnd_toEndOf="@id/title"
            android:layout_marginTop="50dp"
            android:maxLength="10"
            android:paddingStart="18dp"
            android:text="@={vm.nickName}"
            android:textAllCaps="false"
            android:gravity="left|center_vertical"
            android:hint="닉네임을 입력해주세요"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/button4"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/et_nickName"
            app:layout_constraintBottom_toBottomOf="@id/et_nickName"
            android:text="닉네임 이쁘네요"
            android:paddingRight="18dp"
            android:visibility="@{vm.nickNameState ? View.VISIBLE : View.GONE}"
            style="@style/text"
            app:layout_constraintEnd_toEndOf="@id/et_nickName"/>
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_pw"
            app:layout_constraintTop_toBottomOf="@id/et_nickName"
            app:layout_constraintStart_toStartOf="@id/title"
            app:layout_constraintEnd_toEndOf="@id/title"
            android:layout_marginTop="8dp"
            android:maxLength="12"
            android:paddingStart="18dp"
            android:text="@={vm.pw}"
            android:textAllCaps="false"
            android:gravity="left|center_vertical"
            android:hint="비밀번호를 입력해주세요"
            android:visibility="@{vm.nickNameState ? View.VISIBLE : View.GONE}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/button4"/>
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_bjId"
            app:layout_constraintTop_toBottomOf="@id/et_pw"
            app:layout_constraintStart_toStartOf="@id/et_nickName"
            app:layout_constraintEnd_toEndOf="@id/et_nickName"
            android:layout_marginTop="8dp"
            android:paddingStart="18dp"
            android:text="@={vm.bjId}"
            android:textAllCaps="false"
            android:maxLength="20"
            android:gravity="left|center_vertical"
            android:visibility="@{vm.pwState ? View.VISIBLE : View.GONE}"
            android:hint="백준 아이디를 입력해주세요"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/button4"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/et_bjId"
            app:layout_constraintBottom_toBottomOf="@id/et_bjId"
            android:text="@{vm.bjIdDetail}"
            android:visibility="@{vm.nickNameState ? View.VISIBLE : View.GONE}"
            android:paddingRight="18dp"
            style="@style/text"
            app:layout_constraintEnd_toEndOf="@id/et_nickName"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_check"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@id/et_bjId"
            app:layout_constraintTop_toBottomOf="@id/et_bjId"
            android:text="백준 아이디 확인"
            android:visibility="@{vm.pwState ? View.VISIBLE : View.GONE}"
            android:onClick="@{() -> vm.onClickCheck()}"
            style="@style/button1"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_next"
            android:text="다음"
            style="@style/button1"
            android:onClick="@{() -> vm.onClickNext()}"
            android:visibility="@{vm.bjIdState ? View.VISIBLE : View.GONE}"
            android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>