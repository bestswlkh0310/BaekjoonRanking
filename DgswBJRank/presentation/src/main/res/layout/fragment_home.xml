<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.feature.main.rank.RankFragment">
    <data>
        <variable
            name="vm"
            type="com.bestswlkh0310.presentation.feature.main.home.HomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="21dp"
            android:text="m월 d일"
            style="@style/whiteTitle"/>
        <TextView
            android:id="@+id/solve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="0 solve"
            android:textSize="30dp"
            android:layout_marginTop="66dp"
            style="@style/whiteTitle"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="77dp"
            app:layout_constraintTop_toBottomOf="@id/solve"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/main_background"
            android:elevation="14dp">
            <TextView
                android:id="@+id/your_friends_now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="당신의 친구들은 지금.."
                style="@style/blackText"
                android:layout_marginTop="33dp"
                android:layout_marginStart="19dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_friends"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="19dp"
                app:layout_constraintTop_toBottomOf="@id/your_friends_now"/>
            <TextView
                android:id="@+id/new_friends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="새 친구들"
                style="@style/blackText"
                android:layout_marginTop="33dp"
                android:layout_marginStart="19dp"
                app:layout_constraintTop_toBottomOf="@id/rv_friends"
                app:layout_constraintStart_toStartOf="parent"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_new_friends"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="19dp"
                app:layout_constraintTop_toBottomOf="@id/new_friends"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>