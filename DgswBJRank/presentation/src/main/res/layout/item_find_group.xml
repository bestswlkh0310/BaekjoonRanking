<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="vm"
            type="com.bestswlkh0310.presentation.feature.main.find_group.FindGroupViewModel" />
    </data>
    <androidx.cardview.widget.CardView
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="1dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        app:cardCornerRadius="15dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="8dp">
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ALT"
                style="@style/blackSubTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="6dp"
                android:layout_marginStart="20dp"/>
            <TextView
                android:id="@+id/description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="저희 동아리는 지대 "
                style="@style/grayText"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/name"
                app:layout_constraintStart_toStartOf="@id/name"
                app:layout_constraintEnd_toStartOf="@id/btn_join"
                />
            <TextView
                android:id="@+id/member_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/blackText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="10dp"
                android:text="그룹원 12/15"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_join"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toStartOf="@id/btn_more"
                app:layout_constraintBottom_toBottomOf="@id/btn_more"
                style="@style/btnMainStyle"
                android:layout_marginHorizontal="0dp"
                android:text="가입하기"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                style="@style/btnWhiteStyle"
                android:elevation="0dp"
                android:layout_marginHorizontal="0dp"
                android:layout_marginEnd="5dp"
                android:text="자세히"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>