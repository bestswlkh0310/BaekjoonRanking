<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
    </style>
    <style name="text">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="buttonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:width">293dp</item>
        <item name="android:height">57dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="button1" parent="buttonStyle">
        <item name="android:background">@drawable/blue_button_background</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="button2" parent="buttonStyle">
        <item name="android:background">@drawable/blue_input_background</item>
        <item name="android:textColor">@color/main50</item>
    </style>
    <style name="button3" parent="buttonStyle">
        <item name="android:background">@drawable/black_input_background</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColorHighlight"></item>
    </style>
    <style name="button4" parent="buttonStyle">
        <item name="android:background">@drawable/gray_input_background</item>
        <item name="android:textColorHint">@color/black</item>
    </style>
</resources>
