<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="blackTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
    </style>
    <style name="whiteTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
    </style>


    <style name="blackText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="whiteText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="buttonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:width">293dp</item>
        <item name="android:height">57dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="button1" parent="buttonStyle">
        <item name="android:background">@drawable/btn_blue</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="button2" parent="buttonStyle">
        <item name="android:background">@drawable/input_blue</item>
        <item name="android:textColor">@color/main50</item>
    </style>
    <style name="button3" parent="buttonStyle">
        <item name="android:background">@drawable/input_black</item>
        <item name="android:textColorHint">@color/black</item>
    </style>
    <style name="button4" parent="buttonStyle">
        <item name="android:background">@drawable/gray_input_background</item>
        <item name="android:textColorHint">@color/black</item>
    </style>
</resources>