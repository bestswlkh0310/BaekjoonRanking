<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <corners android:radius="15dp" />
            <gradient
                android:type="linear"
                android:angle="0"
                android:startColor="#4D88FB"
                android:endColor="#16B2F4"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="15dp" />
            <gradient
                android:type="linear"
                android:angle="0"
                android:startColor="#3B7DFD"
                android:endColor="#049FE1"/>
        </shape>
    </item>
</selector>